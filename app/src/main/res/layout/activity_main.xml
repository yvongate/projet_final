<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="32dp">

    <TextView
        android:id="@+id/textViewWelcome"
        style="@style/ModernText.Heading1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bienvenue"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewUserName"
        style="@style/ModernText.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nom Utilisateur"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcome" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardClasses"
        style="@style/ModernCard"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginTop="56dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/primary_coral"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserName">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/ic_menu_agenda"
                android:tint="@color/text_on_dark" />

            <TextView
                style="@style/ModernText.Heading2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Classes"
                android:textColor="@color/text_on_dark" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/buttonLogout"
        style="@style/ModernButton.Outlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DÃ©connexion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
