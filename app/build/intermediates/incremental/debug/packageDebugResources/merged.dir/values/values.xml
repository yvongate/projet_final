<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="background_light">#fbfbee</color>
    <color name="black">#FF000000</color>
    <color name="divider">#eeeeee</color>
    <color name="gray_100">#F5F5F5</color>
    <color name="gray_300">#E0E0E0</color>
    <color name="gray_600">#757575</color>
    <color name="primary_coral">#ff7063</color>
    <color name="primary_coral_dark">#e6564a</color>
    <color name="primary_coral_light">#ff9088</color>
    <color name="primary_dark">#1e1e1e</color>
    <color name="shadow">#10000000</color>
    <color name="surface_card">#ffffff</color>
    <color name="surface_white">#fcfcfd</color>
    <color name="text_hint">#9e9e9e</color>
    <color name="text_on_dark">#ffffff</color>
    <color name="text_primary">#1e1e1e</color>
    <color name="text_secondary">#6b6b6b</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">ClassManager</string>
    <style name="ModernButton.Coral" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_on_dark</item>
        <item name="backgroundTint">@color/primary_coral</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="ModernButton.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_on_dark</item>
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="ModernButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="strokeColor">@color/divider</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="ModernCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/surface_card</item>
        <item name="contentPadding">20dp</item>
    </style>
    <style name="ModernText.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    <style name="ModernText.Caption">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="ModernText.Heading1">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    <style name="ModernText.Heading2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    <style name="ModernText.Heading3">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="ModernTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_dark</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>
    <style name="Theme.ClassManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_coral</item>
        <item name="colorPrimaryVariant">@color/primary_coral_dark</item>
        <item name="colorOnPrimary">@color/text_on_dark</item>
        <item name="colorSecondary">@color/primary_dark</item>
        <item name="colorSecondaryVariant">@color/primary_dark</item>
        <item name="colorOnSecondary">@color/text_on_dark</item>
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar" ns1:targetApi="m">true</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>
    <style name="Theme.ClassManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>